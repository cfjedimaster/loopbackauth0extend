

<div class="row align-items-center">
	<div class="col"></div>
	<div class="col">
		<h2>Login</h2>

		{{#if failed}}
		<div class="alert alert-danger" role="alert">
			Your login failed.
		</div>
		{{/if}}

		<form action="/login" method="post">
		<div class="form-group">
			<label for="email">Email address</label>
			<input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" placeholder="Enter email" value="user1@google.com">
			<small id="emailHelp" class="form-text text-muted">Use "user1@google.com" and "user1" for password.</small>
		</div>
		<div class="form-group">
			<label for="password">Password</label>
			<input type="password" class="form-control" id="password" name="password" placeholder="Password" value="user1">
		</div>
		<button type="submit" class="btn btn-primary">Login</button>
		</form>
	</div>
	<div class="col"></div>
</div>
